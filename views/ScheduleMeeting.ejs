        <!-- Start Schedule -->
        <div class="container" style="margin-top: 20px;">
            <div class="row flex-lg-nowrap">

                <div class="col">
                    <div class="row">
                        <div class="col mb-3">
                            <div class="card">
                                <div class="card-body">
                                        <ul class="nav nav-tabs">
                                            <li class="nav-item"><a href="" class="active nav-link">Schedule Meeting</a></li>
                                        </ul>
                                        <% if(ScheduleMeetingError){ %>
                                            <p class="alert alert-success" style="margin-top: 20px;">The information has been received successfully</p>
                                        <% } %>  
                                        <% let emailError = validiationErrors.find(err => err.param === 'Email') %> 
                                            <% if(emailError) { %>
                                                    <p class="aletr alert-danger" style="margin: 10px ;text-align: center;font-size: 15px;padding: 10px 0;border-radius: 15px;">
                                                    <%= emailError.msg %> 
                                                    </p>
                                            <% } %>
                                        <div class="tab-content pt-3">
                                            <div class="tab-pane active">
                                                <form class="form"
                                                    method="POST"
                                                    action="">
                                                    <div class="row">
                                                        <div class="col">
                                                            <div class="row">
                                                                <div
                                                                    class="col">
                                                                    <div
                                                                        class="form-group">
                                                                        <label>
                                                                            Name</label>
                                                                        <input
                                                                            class="form-control"
                                                                            type="text"
                                                                            name="Name"
                                                                            required="">
                                                                    </div>
                                                                </div>
                                                                
                                                                <div
                                                                    class="col">
                                                                    <div
                                                                        class="form-group">
                                                                        <label>Phone-Number</label>
                                                                        <input
                                                                            class="form-control"
                                                                            type="text"
                                                                            name="phoneNumber"
                                                                            required="">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div
                                                                    class="col">
                                                                    <div
                                                                        class="form-group">
                                                                        <label>Company Name</label>
                                                                        <input
                                                                            class="form-control"
                                                                            type="text"
                                                                            name="companyName"
                                                                            required="">
                                                                    </div>
                                                                </div>
                                                                
                                                            </div>
                                                            <div class="row">
                                                                <div
                                                                    class="col-6">
                                                                    <div
                                                                        class="form-group">
                                                                        <label>Email</label>
                                                                        <input
                                                                            class="form-control"
                                                                            type="text"
                                                                            placeholder="user@example.com"
                                                                            name="Email"
                                                                            required="">
                                                                    </div>
                                                                </div>

                                                                <div
                                                                    class="row">
                                                                    <div
                                                                        class="col">
                                                                        <div
                                                                            class="form-group">
                                                                            <label>Date</label>
                                                                            <input
                                                                                class="form-control"
                                                                                type="date"
                                                                                name="Date"
                                                                                required="">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div
                                                                    class="row">
                                                                    <div
                                                                        class="col">
                                                                        <div
                                                                            class="form-group">
                                                                            <label>Time</label>
                                                                            <input
                                                                                class="form-control"
                                                                                type="time"
                                                                                name="Time"
                                                                                required="">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="row">
                                                        <div class="col d-flex
                                                            justify-content-end">
                                                            <button class="btn
                                                                btn-primary"
                                                                type="submit"
                                                                style="width: 160px;
                                                                height: 42px;
                                                                background-color: #49BFAC;
                                                                border-color: #49BFAC;
                                                                border-radius: 0;
                                                                color: white;
                                                                font-size: 17px;
                                                                font-weight: bold;
                                                                outline: none;">Send
                                                                </button>
                                                        </div>
                                                    </div>
                                                    
                                                </form>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% for (let error of validiationErrors){ %> 
                            <% } %> 

                    </div>

                </div>
            </div>
        </div>
