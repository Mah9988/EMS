                    <div class="orders">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="box-title">My Requests </h4>
                                    </div>
                                    <div class="card-body--">
                                        <div class="table-stats order-table
                                            ov-h">
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th class="serial">#</th>
                                                        <th>Time</th>
                                                        <th>Date</th>
                                                        <th>Vacation or Leave</th>
                                                        <th>Reason</th>
                                                        <th>Status</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% let count = 1 %> 
                                            <% for(let le of leave) {%> 
                                            <% if(le.ID == idHR) {%> 
                                            <tr>
                                                <td><%= count++ %>. </td>
                                                <td><%= le.Time %> </td>
                                                <td><%= le.Date %> </td>
                                                <td><%= le.Type %> </td>
                                                <td><%= le.Reason %> </td>
                                                <% if(le.Status != "null") {%>
                                                    <% if(le.Status === 'Approve'){ %> 
                                                        <td><span class="badge badge-complete"><%= le.Status %> </span></td>
                                                        <% } %> 
                                                    <% if(le.Status === 'Reject'){ %> 
                                                        <td><span class="badge badge-pending"><%= le.Status %> </span></td>
                                                        <% } %> 
                                                <% } %>   
                                                <% if(le.Status == 'null') {%>
                                                <td><span class="badge badge-yet">PENDING</span></td>
                                                <% } %>  
                                                
                                            </tr>
                                            <% } %> 
                                            <% } %> 
                                            
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- /.table-stats -->
                                    </div>
                                </div>
                                <!-- /.card -->

                            </div>
