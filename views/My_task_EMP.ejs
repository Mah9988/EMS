            </nav>
        </aside>
        <!-- /#left-panel -->

        <!-- /#left-panel -->
        <!-- Right Panel -->
        <div id="right-panel" class="right-panel">
            <!-- Header-->
            <header id="header" class="header">
                <div class="top-left">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="./"><img
                                src="../images/logo1.jpg" alt="Logo"></a>
                        <a class="navbar-brand hidden" href="./"><img
                                src="../images/logo2.png" alt="Logo"></a>
                        <a id="menuToggle" class="menutoggle"><i class="fa
                                fa-bars"></i></a>
                    </div>
                </div>
                <div class="top-right">
                    <div class="header-menu">
                        <div class="header-left" style="padding-top: 10px;">
                            <h5 style="font-weight: bold;"><%=nameEmp%></h5>
                            <p><%=idEmp%></p>
                        </div>

                        <div class="user-area dropdown float-right">
                            <a href="#" class="dropdown-toggle active"
                                data-toggle="dropdown" aria-haspopup="true"
                                aria-expanded="false">
                                <img class="user-avatar rounded-circle"
                                    src="../images/admin.jpg" alt="User Avatar">
                            </a>

                            <div class="user-menu dropdown-menu">
                                <a class="nav-link" href="/My_Profile"><i class="fa fa-
                                        user"></i>My Profile</a>
                                <form action="/logout" method="POST">
                                    <button type="submit" style="border: none;background: none;font-size: 15px;padding-left: 12px;">
                                        <i class="fa fa-power -off"></i>Logout
                                    </button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </header>
            <!-- /#header -->
            <!-- breadcrumbs -->
            <div class="breadcrumbs">
                <div class="breadcrumbs-inner">
                    <div class="row m-0">
                        <div class="col-sm-4">
                            <div class="page-header float-left">
                                <div class="page-title">
                                    <h1>My Task</h1>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="page-header float-right">
                                <div class="page-title">
                                    <ol class="breadcrumb text-right">
                                        <li><a href="/employee">Dashboard</a></li>
                                        <li class="active">My Task</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /#breadcrumbs -->
            <!-- Content -->
            <div class="content">
                <div class="animated fadeIn">
                    <!-- Task -->
                    <div class="orders">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="box-title">Tasks </h4>
                                    </div>
                                    <div class="card-body--">
                                        <div class="table-stats order-table
                                            ov-h">
                                            <table class="table">
                                                <thead style="font-size: 17px;">
                                                    <tr>
                                                        <th class="serial">#</th>
                                                        <th>Task Title</th>
                                                        <th>Details</th>
                                                        <th>Due Date / Time</th>
                                                        <th>File</th>
                                                        <th>Upload</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                
                                                <tbody><%counter = 1%>
                                                    <%for(let tas of task){%>
                                                        <%if(tas.empId === idEmp){%>
                                                            <% if(tas.sendFile === "null") {%> 
                                                    <tr>
                                                        <td class="serial"><%=counter%>.</td>
                                                        <td> <%=tas.taskTitle%> </td>
                                                        <td> <%=tas.details%>
                                                        </td>
                                                        <td><%=tas.dueDate%> | <%=tas.dueTime%></td>
                                                        <% if(tas.file == 'null'){%>
                                                            <td><span>No File Uploaded</span></td>
                                                        <% } %>  
                                                        <% if(tas.file != 'null') {%>
                                                            <% let splitTask = (tas.file).split('----')%> 
                                                            <td><a href="../files/<%=tas.file%>" download><i class="fas fa-download" style="margin-right: 8px;"></i><%=splitTask[1]%></a></td>
                                                        <% } %>  
                                                        <form action="/employee/My_task_EMP" method="POST" enctype="multipart/form-data">
                                                        <td>
                                                            <div class='file-input'>
                                                                <input type='file' name="taskFile">
                                                                <span class='button'>Choose File</span>
                                                                <span class='label' data-js-label>No file selected</label>
                                                            </div> 
                                                            </td>
                                                            <% 	
                                                            var today = new Date(); 
                                                            var date = today.getFullYear()+'-'+(today.getMonth()+1)+'-'+today.getDate();
                                                            var time = today.toLocaleString('en-US', { hour: 'numeric', minute: 'numeric', hour12: true })
                                                            %> 
                                                        <td>
                                                            <span class="upload-btn-wrapper">
                                                                <button type="submit" name="empUploadBtn" value="<%=[tas._id,time,date]%>"
                                                                    class="Task-button"
                                                                    id="send-task">Send Task</button>
                                                            </span>
                                                        </td>
                                                    </form>
                                                    </tr>
                                                    <%counter = counter + 1%>
                                                    <% } %> 
                                                    <%}%>
                                                    
                                                    <%}%>
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- /.table-stats -->
                                    </div>
                                </div>
                                <!-- /.card -->

                            </div>
                        </div>
                    </div>
                    <!-- Task Info -->
                    <div class="orders">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="box-title">Submission status </h4>
                                    </div>
                                    <div class="card-body--">
                                        <div class="table-stats order-table
                                            ov-h">
                                            <table class="table">
                                                <thead style="font-size: 17px;">
                                                    <tr>
                                                        <th class="serial">#</th>
                                                        <th>Task Title</th>
                                                        <th>Submission time </th>
                                                        <th>Feedback</th>
                                                        <th>Grading status</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% let counter1 = 1 %> 
                                                    <% for(let task1 of task) {%>
                                                        <%if(task1.empId === idEmp){%>
                                                            <% if(task1.timeSubmit != "null"){ %> 
                                                            <tr>
                                                                <td><%= counter1++ %> </td>
                                                                <td><%= task1.taskTitle %> </td>
                                                                <td><%= task1.timeSubmit %> | <%= task1.dateSubmit %></td>
                                                                
                                                                <td><% if(task1.feedBack != "null"){ %> 
                                                                    <%= task1.feedBack %> 
                                                                    <% } %> 
                                                                    <% if(task1.feedBack == 'null') {%>
                                                                        <span>No Feedback Yet</span>
                                                                    <% } %>  
                                                                </td>
                                                                <td>
                                                                    <% if(task1.Status !='null') {%> 
                                                                    <% if(task1.Status === "Approve") {%>
                                                                        <span class="badge badge-complete">Aprroved</span>
                                                                    <% } %> 
                                                                    <% if(task1.Status === "Reject") {%>
                                                                        <span class="badge badge-pending">Rejected</span>
                                                                    <% } %>  
                                                                    <% } %>
                                                                    <% if(task1.Status=='null'){ %>
                                                                        <span class="badge badge-yet">PENDING</span>
                                                                    <% } %>   
                                                                </td>

                                                            </tr>
                                                            <% } %> 
                                                        <% } %>   
                                                    <% } %> 
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- /.table-stats -->
                                    </div>
                                </div>
                                <!-- /.card -->

                            </div>
                        </div>
                    </div>


                    <!-- .animated -->
                </div>
                <!-- /.content -->
            </div>
            <div class="clearfix"></div>
        </div>

        <!-- /#right-panel -->
