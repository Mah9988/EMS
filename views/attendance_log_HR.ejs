                                                    <%}%>
                                                <% if(atten.Time!="8:0 "){%>
                                                    <span class="badge badge-pending">oppose</span>
                                                <% } %>  
                                                </td>
                                            </tr>
                                            <% counter = counter + 1 %> 
                                        <% } %> 
                                        </tbody>
                                    </table>

