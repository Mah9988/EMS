                                                <thead>
                                                    <tr>
                                                        <th class="serial">#</th>
                                                        <th >Id</th>
                                                        <th>Name</th>
                                                        <th>Time / Date</th>
                                                        <th>Vacation or Leave</th>
                                                        <th>File</th>
                                                        <th>Status</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% let counter =1 %> 
                                                    <% for(let lee of leave){ %>
                                                        <% if(lee.Status != "null") {%>
                                                        <tr>  
                                                            <td><%= counter++ %>. </td>
                                                            <td><%= lee.ID %> </td>
                                                            <td><%= lee.Name %> </td>
                                                            <td><%= lee.Time %> | <%= lee.Date %>  </td>
                                                            <td><%= lee.Type %> </td>
                                                            <% if(lee.File =='null'){ %> 
                                                                <td><span>No File Uploaded</span></td>    
                                                            <% } %> 
                                                            <% if(lee.File !='null'){ %> 
                                                            <td><% let splitTask = (lee.File).split('----')%> 
                                                                <a href="../files/<%=lee.File%>" download><i class="fas fa-download" style="margin-right: 8px;"></i><%=splitTask[1]%></a></td>
                                                            <% } %> 
                                                            <% if(lee.Status === 'Approve'){ %> 
                                                                <td><span class="badge badge-complete"><%= lee.Status %> </span></td>
                                                            <% } %> 
                                                            <% if(lee.Status === 'Reject'){ %> 
                                                                <td><span class="badge badge-pending"><%= lee.Status %> </span></td>
                                                            <% } %>
                                                            <form action="/HR/All_Requests_leave_HR" method="POST">
                                                                <td><button type="submit" style="background: none; border: none;" class="font-trash" name="deleteBtnLeave" value="<%= lee._id %>"><i class="fas fa-trash-alt"></i></button></td>
                                                            </form>
                                                        </tr>        
                                                        <% } %>
                                                    <% } %>  
                                                    

                                                </tbody>
