                                                                <% } %> 
                                                            <td>
                                                                <span><select
                                                                        name="statusLeave"
                                                                        style="padding:
                                                                        20px;border:
                                                                        none;background-color:
                                                                        inherit;font-size:
                                                                        20px;">
                                                                        <option value="null">----</option>
                                                                        <option value="Approve">Approve</option>
                                                                        <option value="Reject">Reject</option>
                                                                    </select></span>
                                                            </td>
                                                            <td>
                                                                
                                                                <button type="submit"  class="Task-button" name="sendLeave" value="<%=lea._id%>">Send</button>
                                                                </form>
                                                            </td>
                                                        </tr>
                                                    <%}%>
                                                    <% } %> 
                                                    

