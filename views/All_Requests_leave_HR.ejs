                                                        <th>admissions</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <form action="/HR/All_Requests_leave_HR" method="POST">
                                                    <% let count = 1 %> 
                                                    <% for(let lea of leave){ %> 
                                                       <%if(lea.Status === "null"){%>
                                                        <tr>
                                                            <td class="serial"><%= count++ %>.</td>
                                                            <td><%= lea.ID %> </td>
                                                            <td><%= lea.Name %> </td>
                                                            <td><%= lea.Time %> | <%= lea.Date %> </td>
