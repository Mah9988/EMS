                                    <div class="card-body">
                                        <h4 class="box-title">All Request Leave </h4>
                                        
                                            <button type="submit" name="deleteTableLeave1"
                                            data-toggle="modal" data-target="#deleteTableLeave" class="button-optinal btn btnDelete " value="true">Delete Table</button>
